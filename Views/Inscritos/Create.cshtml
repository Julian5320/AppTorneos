@model AppTorneos.Models.ViewModel.EquiposYTorneos


@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Inscrito</h4>
    <hr />
    <div class="form-group">
        @Html.DropDownListFor(model => Model.equipo, new SelectList(Model.equipos, "Nombre", "Nombre"), htmlAttributes: new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.DropDownListFor(model => Model.torneo, new SelectList(Model.torneos, "Nombre", "Nombre"), htmlAttributes: new { @class = "form-control" })

    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
